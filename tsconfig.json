{
    "compilerOptions": {
        "alwaysStrict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "target": "es2015",
        "lib": ["es2016"],
        "noImplicitAny": false,
        "sourceMap": true,
        "strictNullChecks": true,
        "outDir": "./lib",
        "types": [
            "node",
            "mocha"
        ]
    },
    "include": [
        "./src/**/*"
    ]
}